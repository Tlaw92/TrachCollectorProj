    ViewData["Title"] = "Index"; /*points to line 6 inside _Layout.cshtml*/
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
